@using PagedList.Mvc;
@model PagedList.IPagedList<webTintuc.Areas.Models.TinTuc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Back/Views/Shared/AdminDashBoard.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            ID
        </th>
        <th>
            Tiêu đề
        </th>

        <th>
            Ngày tạo
        </th>



        <th>
            Tác giả
        </th>
        <th>
            Hot
        </th>
        <th>
            Danh mục
        </th>
        <th>
            Trạng thái duyệt
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TieuDe1)
            </td>


            <td>
                @Html.DisplayFor(modelItem => item.NgayTao1)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.TacGia1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hot1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenDM1)
            </td>

            @*@Html.DisplayFor(modelItem => item.Trangthaiduyet)*@
            @if (item.Trangthaiduyet == 0)
            {
                <td>Đang đợi duyệt . . .</td>
            }
            else if (item.Trangthaiduyet == 1)
            {
                <td> Đã duyệt</td>
            }
            else
            {
                <td> Đã từ chối</td>
            }

            <td>
                @Html.ActionLink("Duyệt", "Duyet", new { id = item.Id1 }) |
                @Html.ActionLink("Không duyệt", "KDuyet", new { id = item.Id1 })

            </td>
        </tr>
    }

</table>
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))