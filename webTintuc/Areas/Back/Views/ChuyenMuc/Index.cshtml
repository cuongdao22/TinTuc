@using PagedList.Mvc;
@model PagedList.IPagedList<webTintuc.Areas.Models.DanhMuc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Back/Views/Shared/AdminDashBoard.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tên
        </th>
        <th>
            Danh mục cha
        </th>
        <th>
            Tên danh mục cha
        </th>
        <th>
            Metatitle
        </th>
        <th>
            Hiển thị
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ten)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DanhMucCha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenDanhMucCha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MetaTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HienThi)

            </td>
            <td>
                @Html.ActionLink("Sửa", "Update", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))